{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["jest", "@vue/test-utils"] // Tambahkan tipe jest dan vue-test-utils
  },
  "include": [
    "node_modules/@nuxt/types/**/*.ts",
    "server/test/**/*.ts", // Folder tes kamu
    "src/**/*.ts"   // Folder kode sumber kamu
  ]
}
